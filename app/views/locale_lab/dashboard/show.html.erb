<h2>Translation files</h2>
<ul>
  <% translation_files.each do |file| %>
    <li><%= file %></li>
  <% end %>
</ul>

<h2>Available locales</h2>
<ul>
  <% translation_locales.each do |locale| %>
    <li><%= locale %></li>
  <% end %>
</ul>

<h2>Available keys</h2>
<ul>
  <% translation_keys.each do |key| %>
    <li>
      <strong><%= key %></strong>
      <dl>
      <% translation_locales.each do |locale| %>
        <dt><%= locale %></dt>
        <dd><pre><%= translation_contents[locale][key] %></pre></dd>
      <% end %>
      </dl>
    </li>
  <% end %>
</ul>