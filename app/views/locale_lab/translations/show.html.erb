<%=
  render 'shared/locale_lab/sidebar', navigation: @browser, path: @navigation.path
%>

<div class="content">
  <div class="key-overview">
    <%= render 'navigation_overview' %>

    <% if @translations.present? %>
      <ul>
        <% @translations.each do |key, translations| %>
          <%=
            render 'translations_with_key',
              key:          key,
              translations: translations
          %>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<dialog data-controller="editor" class="editor">
  <div data-editor-target="wrapper">
    <button data-action="click->editor#close" data-editor-target="closeButton">Close</button>
    <button data-action="click->editor#save" data-editor-target="saveButton">Save</button>
  </div>
</dialog>